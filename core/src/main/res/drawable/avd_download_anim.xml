<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group android:name="group">
                <path
                    android:name="path_arrow_down"
                    android:pathData="M 19 9 L 15 9 L 15 3 L 9 3 L 9 9 L 5 9 L 12 16"
                    android:fillColor="#FFFFFF"/>
            </group>
            <path
                android:name="path_bottom_line"
                android:pathData="M 19 -7 Z M 5 18 L 5 20 L 19 20 L 19 18 L 5 18 Z"
                android:fillColor="#FFFFFF"/>
        </vector>
    </aapt:attr>
    <target android:name="group">
        <aapt:attr name="android:animation">
            <set
                android:ordering="together">

                <objectAnimator
                    android:propertyName="translateY"
                    android:duration="1200"
                    android:valueFrom="-24"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/accelerate_cubic"
                    android:repeatCount="infinite"/>

                <objectAnimator
                    android:propertyName="fillAlpha"
                    android:duration="1200"
                    android:valueFrom="0.1"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/accelerate_cubic"
                    android:repeatCount="infinite"/>

            </set>
        </aapt:attr>
    </target>
</animated-vector>
